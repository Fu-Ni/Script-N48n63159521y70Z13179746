local InfoGroup = Tabs.Info:AddRightGroupbox("Join Discord For Scripts","help")
InfoGroup:AddButton("Copy Discord Invite", function()
    setclipboard(invite)
    Library:Notify("Discord link copied.", 3)
end)

-- ===== UI Settings ===== --
local MenuGroup = Tabs["UI Settings"]:AddLeftGroupbox("Menu","wrench")
MenuGroup:AddButton("Unload", function()
    Library:Unload()
end)
